.scroll{
  width:100%;
  height:500rpx;
  border:1rpx solid #000;
  box-sizing: border-box;
  display: flex;
}
.wrap{
  height:500rpx;
  display: flex;
  flex-wrap: nowrap;
}
.content{
  height:500rpx;
  width: 750rpx;
  background: burlywood;
  flex-shrink: 0;
}
.content:nth-child(2n-1){
  background: rgb(98, 155, 76);
}
.swiper{
  width:750rpx;
  height:400rpx;

}
.swiper-item{
  height:400rpx;
  background: rgb(97, 85, 126);
}
.swiper-item:nth-child(2n){
  background: rgb(182, 139, 89);

}

.box{
  width:100px;
  height:100px;
  background: rgb(146, 109, 109);

}
.box2{
  width:200px;
  height:200px;
  background: rgb(185, 32, 32);

}
.act{
  background: rgb(182, 192, 95);
}